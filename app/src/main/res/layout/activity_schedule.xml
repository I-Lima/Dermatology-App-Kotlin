<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ScheduleActivity"
    android:paddingVertical="14dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="24dp">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_arrow"
            android:contentDescription="@string/back_icon"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="-8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/H2"
            android:text="@string/my_profile"
            android:textColor="@color/white"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_back"
            android:background="@drawable/shape_bottom_sheet"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:backgroundTint="@color/primary"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/calendar_bgd"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"/>

    <ImageView
        android:id="@+id/back_button_component"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_arrow"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/calendar_bgd"
        app:layout_constraintBottom_toBottomOf="@id/calendar_bgd"/>

    <LinearLayout
        android:id="@+id/calendar_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/calendar_bgd"
        app:layout_constraintBottom_toBottomOf="@id/calendar_bgd"
        app:layout_constraintStart_toEndOf="@id/back_button_component"
        app:layout_constraintEnd_toStartOf="@id/next_button_component"
        >

        <br.com.ilstudio.dermatologyapp.ui.customview.CalendarItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            app:day_name="MON"
            app:day_number="22"
            app:type="inactive" />

        <br.com.ilstudio.dermatologyapp.ui.customview.CalendarItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:day_number="23"
            app:day_name="TUE"
            app:type="inactive"
            android:layout_marginEnd="6dp"/>

        <br.com.ilstudio.dermatologyapp.ui.customview.CalendarItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:day_number="24"
            app:day_name="WED"
            app:type="today"
            android:layout_marginEnd="6dp" />

        <br.com.ilstudio.dermatologyapp.ui.customview.CalendarItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:day_number="25"
            app:day_name="THU"
            app:type="active"
            android:layout_marginEnd="6dp"/>

        <br.com.ilstudio.dermatologyapp.ui.customview.CalendarItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:day_number="26"
            app:day_name="FRI"
            app:type="active" />

    </LinearLayout>

    <ImageView
        android:id="@+id/next_button_component"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_arrow"
        android:rotation="180"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/calendar_bgd"
        app:layout_constraintBottom_toBottomOf="@id/calendar_bgd"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/calendar_bgd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/menu"
        android:paddingBottom="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/hour_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/available_time"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/label_16_medium"
                android:textColor="@color/primary"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/hour_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="14dp"/>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/recyclerHours"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="14dp"
                android:background="@color/primary"
                />

            <TextView
                android:id="@+id/details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_details"
                android:textColor="@color/primary"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/line"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/label_16_medium" />

            <br.com.ilstudio.dermatologyapp.ui.customview.ButtonTagView
                android:id="@+id/button_yourself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/details_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                app:titleTag="Yourself"
                app:typeTag="active"/>

            <br.com.ilstudio.dermatologyapp.ui.customview.ButtonTagView
                android:id="@+id/button_another"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/details_title"
                app:layout_constraintStart_toEndOf="@id/button_yourself"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                app:titleTag="Another Person"
                app:typeTag="inactive"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/another_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_yourself">

                <br.com.ilstudio.dermatologyapp.ui.customview.InputView
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:placeholder="John Doe"
                    app:titleInput="Full Name"
                    app:typeInput="text" />

                <br.com.ilstudio.dermatologyapp.ui.customview.InputView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/full_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:titleInput="Age"
                    app:placeholder="30"
                    app:typeInput="number"
                    />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/age"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/label_14_medium"/>

                <br.com.ilstudio.dermatologyapp.ui.customview.ButtonTagView
                    android:id="@+id/button_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/gender"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    app:titleTag="Female"
                    app:typeTag="inactive" />

                <br.com.ilstudio.dermatologyapp.ui.customview.ButtonTagView
                    android:id="@+id/button_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/gender"
                    app:layout_constraintStart_toEndOf="@id/button_female"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="4dp"
                    app:titleTag="Male"
                    app:typeTag="active"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/another_form"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="14dp"
                android:background="@color/primary"
                />

            <TextView
                android:id="@+id/label_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/describe_your_problem"
                android:layout_marginTop="10dp"
                style="@style/H3"
                app:layout_constraintTop_toBottomOf="@id/line_2"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/input_large"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:background="@drawable/shape_view_edit_text"
                android:gravity="center_vertical"
                android:hint="@string/enter_your_problem_here"
                android:inputType="text"
                android:textColorHint="@color/blue_200"
                android:paddingHorizontal="16dp"
                style="@style/label_16_regular"
                app:layout_constraintTop_toBottomOf="@id/label_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <br.com.ilstudio.dermatologyapp.ui.customview.LargeCustomButtonView
                android:id="@+id/button_save_appoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:labelTextButton="Save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_large"
                app:active="false"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>