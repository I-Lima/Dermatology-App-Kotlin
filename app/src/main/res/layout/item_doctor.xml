<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="16dp"
    android:paddingHorizontal="16dp"
    android:background="@drawable/shape_view_edit_text"
    android:backgroundTint="@color/blue_light">

    <ImageView
        android:id="@+id/img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/alex"
        android:background="@drawable/shape_view_user_picture"
        android:clipToOutline="true"/>
    
    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Dr. Alexandre Bennett"
        android:fontFamily="@font/league_spartan_bold"
        android:textColor="@color/primary"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/speciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:fontFamily="@font/league_spartan"
        android:text="Dermato-Genetics"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:text="Info"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/speciality"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>