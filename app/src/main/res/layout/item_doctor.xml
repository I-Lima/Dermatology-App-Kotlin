<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="16dp"
    android:paddingHorizontal="16dp"
    android:background="@drawable/shape_view_edit_text"
    android:backgroundTint="@color/blue_light"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/img"
        android:contentDescription="photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/alex"
        android:background="@drawable/shape_view_user_picture"
        android:clipToOutline="true"/>
    
    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Dr. Alexandre Bennett"
        android:fontFamily="@font/league_spartan_bold"
        android:textColor="@color/primary"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/speciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:fontFamily="@font/league_spartan"
        android:text="Dermato-Genetics"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginStart="10dp" />

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/img"
        android:background="@drawable/shape_view_user_picture"
        android:layout_marginStart="10dp"
        android:paddingHorizontal="8dp"
        android:backgroundTint="@color/primary"
        android:gravity="center_vertical|center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/league_spartan_medium"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/fav"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:src="@drawable/icon_heart_stroke"
        android:background="@drawable/shape_view_camera_button_central"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="favorite icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>