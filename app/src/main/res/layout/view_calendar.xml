<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondary"
    android:paddingVertical="24dp">
    <ImageView
        android:id="@+id/back_button_component"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_arrow"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/arrow_back"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/day_recycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/back_button_component"
        app:layout_constraintEnd_toStartOf="@id/next_button_component"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/next_button_component"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_arrow"
        android:rotation="180"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/arrow_next"/>
</androidx.constraintlayout.widget.ConstraintLayout>